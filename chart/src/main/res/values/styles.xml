<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="healthyview_style">
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">260dp</item>
        <item name="lineWidth">2dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="coordinatesLineWidth">2px</item>
        <item name="lineColor">#6acfed</item>
        <item name="maxcircleColor">#6acfed</item>
        <item name="coordinatesTextSize">11sp</item>
        <item name="coordinatesTextColor">#808080</item>
    </style>

    <style name="healthy_notify_texstyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#808080</item>
    </style>
    <style name="healthy_report_textstyle">
        <item name="android:textColor">#3d97da</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


</resources>
